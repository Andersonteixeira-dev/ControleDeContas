<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ControleDeContas.Views.ConfiguracoesPage"
             Title="Configurações">
    <VerticalStackLayout Padding="20" Spacing="15">
        <Label 
            Text="Tema do Aplicativo"
            FontSize="22"
            FontAttributes="Bold"/>

        <Frame Padding="10" CornerRadius="8">
            <VerticalStackLayout>
                <RadioButton Content="Seguir o Sistema" x:Name="SystemThemeRadioButton" CheckedChanged="ThemeRadioButton_CheckedChanged"/>
                <RadioButton Content="Tema Claro" x:Name="LightThemeRadioButton" CheckedChanged="ThemeRadioButton_CheckedChanged"/>
                <RadioButton Content="Tema Escuro" x:Name="DarkThemeRadioButton" CheckedChanged="ThemeRadioButton_CheckedChanged"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>